@using IqHealth.Data.Persistence.Model;
@model DoctorAppointment

@{
    ViewBag.Title = "Doctor Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whole-wrap">
    <div class="container">
        <div class="section-top-border">
            <div class="row">
                <div class="col-lg-8">
                    <h3 class="title_color">Doctor Appointment</h3>
                    <div class="comments-area">
                        @if (ViewBag.Message != string.Empty)
                        {
                            <div class="alert alert-warning" role="alert">
                                @ViewBag.Message
                            </div>
                        }

                        @using (Html.BeginForm("DoctorAppointment", "Enquiry", FormMethod.Post))
                        {
                            <form id="appointmentForm">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="input-group-icon">
                                            <div class="icon">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.Name, new { @class = "single-input-primary", @placeholder = "Name", @required = "true" })
                                            </div>
                                        </div>
                                        <div class="input-group-icon">
                                            <div class="icon">
                                                <i class="fa fa-birthday-cake" aria-hidden="true"> </i>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.Age, new { @class = "single-input-primary", @placeholder = "Age (Max age 100)" , @required = "true"})
                                            </div>
                                        </div>
                                        <div class="input-group-icon mt-10">
                                            <div class="icon">
                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.BookingDate, new { @class = "single-input-primary", @placeholder = "Date (dd-MM-yyyy)" , @required = "true"})
                                            </div>
                                        </div>
                                        <div class="input-group-icon">
                                            <div class="icon">
                                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.BookingTime, new { @class = "single-input-primary", @placeholder = "time (HH:MM AM/PM)" })
                                            </div>
                                        </div>
                                        <div class="input-group-icon">
                                            <div class="icon">
                                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.Email, new { @class = "single-input-primary", @placeholder = "Email Address" , @required = "true"})
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">

                                        <div class="input-group-icon">
                                            <div class="icon">
                                                <i class="fa fa-venus-mars" aria-hidden="true">

                                                </i>
                                            </div>
                                        </div>
                                        <div class="form-select" id="default-select">
                                            @Html.DropDownListFor(m => m.Sex, new List<SelectListItem>
                 { new SelectListItem{Text="Male", Value="1"},
                   new SelectListItem{Text="Female", Value="2"}}, "Please select gender", new { @class = "form-select nice-select", @required = "true"})
                                        </div>

                                        <div class="input-group-icon mt-10">
                                            <div class="icon">
                                                <i class="fa fa-tint" aria-hidden="true">

                                                </i>
                                            </div>
                                            <div class="form-select" id="default-select">
                                                @Html.DropDownListFor(m => m.DoctorID, ViewBag.docsList as List<SelectListItem>, "Please select doctor", new { @class = "form-select nice-select", @required = "true"})
                                            </div>
                                        </div>
                                        <div class="input-group-icon mt-10">
                                            <div class="icon">
                                                <i class="fa fa-phone" aria-hidden="true"></i>
                                            </div>
                                            <div class="form-group">
                                                @Html.TextBoxFor(m => m.Mobile, new { @class = "single-input-primary", @placeholder = "10 Digit Mobile number",  @required = "true"})
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <button class="genric-btn success-border circle arrow">
                                        Submit
                                        <span class="lnr lnr-arrow-right"></span>
                                    </button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

