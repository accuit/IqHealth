
@using Leela.PresentationLayer.WebApp.Models;
@model IEnumerable<DoctorMaster>

@{
    ViewBag.Title = "Leela HealthCare Doctors List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="team-area section_gap">
    <div class="container">
        <div class="row justify-content-center section-title-wrap">
            <div class="col-lg-12">
                <h1>Meet Our Best Doctors</h1>
            </div>
        </div>
        <div class="row justify-content-center d-flex align-items-center">
            @foreach (var doctor in Model)
            {
                <div class="col-lg-4 col-md-6 single-team mb-50">
                    <div class="thumb">
                        <img class="img-fluid" src="~/Content/img/doctors/@(doctor.FirstName.ToLower().Replace(' ','-').Trim() + '-' + doctor.LastName.ToLower().Trim() + ".jpg")" alt="@doctor.FirstName">
                        <div class="align-items-end justify-content-center d-flex">
                            <div class="social-links">
                                <h4> @(doctor.FirstName + ' ' + doctor.LastName)</h4>
                            </div>
                            <br />
                            <p>
                                @doctor.Designation
                            </p>

                        </div>
                    </div>
                </div>
            }
            @if (Model.Count() == 0)
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    No doctors found in this category.
                </div>
            }
        </div>
        <div class="row">
            <div class="justify-content-center">
                <a href="@Url.Action("Speciality", "Services")" class="genric-btn success circle arrow">
                    Browse All Doctors
                    <span class="lnr lnr-arrow-right"></span>
                </a>
            </div>
        </div>
    </div>
</section>




