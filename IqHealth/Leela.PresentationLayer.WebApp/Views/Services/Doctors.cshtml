
@using IqHealth.Data.Persistence.Model;
@model IEnumerable<DoctorMaster>

@{
    ViewBag.Title = "Leela HealthCare Doctors List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="service_area section_gap">
    <div class="container">
        <div class="row justify-content-center section-title-wrap">
            <div class="col-lg-12">
                <h1>Meet Our Best Doctors</h1>
            </div>
        </div>
        <div class="row">
            @foreach (var doctor in Model)
            {
                <div class="col-lg-4 col-md-6 mb-60">
                    <div class="single_service">
                        <div class="img">
                            <img default="assets/img/doctors/default.jpg" src="~/Content/img/doctors/@(doctor.FirstName.ToLower().Replace(' ','-').Trim() + '-' + doctor.LastName.ToLower().Trim() + ".jpg")" height="120px" alt="@doctor.FirstName" />
                        </div>
                        <h3> @(doctor.FirstName + ' ' + doctor.LastName)</h3>

                        <ul class="unordered-list" style="text-align: left">
                            <li *ngIf="doctor.Specialist">@doctor.Specialist</li>
                            <li *ngIf="doctor.RegistrationNo">Reg. No.: @doctor.RegistrationNo</li>
                            <li *ngIf="doctor.Designation">@doctor.Designation</li>
                        </ul>
                    </div>
                </div>
            }
            @if (Model.Count() == 0)
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    No doctors found in this category.
                </div>
            }
        </div>
    </div>
</section>



