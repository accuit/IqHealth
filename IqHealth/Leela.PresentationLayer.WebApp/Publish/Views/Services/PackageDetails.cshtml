@using Leela.PresentationLayer.WebApp.Models;
@model PackageCategory

@{
    ViewBag.Title = Model.Title + " HealthCare Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Head{
    <title>@(Model.Title + " HealthCare Package | Life better")</title>
    <meta name="description" content="Leela HealthCare Diagnostics services and packages is supported by Apollo diagnostics in kolkata">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Accuit Technologies">
    <meta name="robots" content="INDEX, FOLLOW">
    <meta name="keywords" content="@string.Join(",", Model.PackageMasters.Select(x=>x.Title))">
    <meta name="date" content="@DateTime.Now.ToLongDateString()" scheme="YYYY-MMM-DD">
    <meta httpequiv="Content-Type" content="text/html">
    <link rel="canonical" href="@Model.PageUrl" />


    <meta property="og:title" content="@(Model.Title + " HealthCare Package")">
    <meta property="og:description" content="@string.Join(",", Model.PackageMasters.Select(x=>x.Title))">
    <meta property="og:url" content="@Model.PageUrl">
    <meta property="og:image" content="@Model.ImageUrl">
    <meta property="og:image:width" content="600">
    <meta property="og:image:height" content="300">
    <meta property="og:type" content="article">
}

<section class="blog_area single-post-area p_120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post row">
                    <div class="col-lg-12">
                        <div class="feature-img">
                            <img style="height:500px" class="img-fluid" width="100%" src="@Model.ImageUrl" alt="@Model.Name">
                        </div>
                    </div>
                    <div class="col-lg-12 blog_details">
                        <h2>@Model.Title Package Includes</h2>
                    </div>
                    @foreach (var item in Model.PackageMasters)
                    {
                        <div class="col-lg-6">
                            <div class="quotes">
                                <div class="row">
                                    <div class="col-md-10">
                                        <h4>@item.Title</h4>
                                    </div>
                                    <div class="col-md-2"><h4> @item.Cost</h4></div>
                                </div>
                                <ul class="unordered-list">

                                    @foreach (var test in item.TestMasters)
                                    {
                                        <li>  @test.Name </li>
                                    }

                                </ul>

                            </div>
                        </div>
                    }
                </div>

            </div>

        </div>
    </div>
</section>

